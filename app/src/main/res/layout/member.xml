<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@android:style/Theme.NoTitleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/MemberImageView"
            android:layout_width="@dimen/profileWidth"
            android:layout_height="@dimen/profileHeight"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/presence_away" />

        <TextView
            android:id="@+id/MemberNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Name Surname"
            style="@style/MemberName" />

        <TextView
            android:id="@+id/MemberRoleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Role"
            style="@style/MemberRole" />

        <Button
            android:id="@+id/MemberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>