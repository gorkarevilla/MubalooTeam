<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ceoView"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gorkarevilla.mubalooteam.MubalooTeam"
    tools:showIn="@layout/team"
    android:background="@color/colorCEOBack">

    <ImageView
        android:id="@+id/ceoImg"
        android:layout_width="@dimen/ceoImageWidth"
        android:layout_height="@dimen/ceoImageHeight"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/presence_away"
        style="@style/ExpCEO"/>

    <TextView
        android:id="@+id/ceoName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        style="@style/ExpCEO" />


</LinearLayout>